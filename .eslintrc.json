{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "parserOptions" : {
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2,
            {
                "MemberExpression" : 0
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}